{% extends "admin/_layout.twig" %}

{% block title %}{{ trans('admin.cache.title') }} â€” Cimaise{% endblock %}

{% block content %}
<div class="max-w-6xl mx-auto">

    {# Flash Messages #}
    {% if session.flash %}
    <div class="mb-6 p-4 rounded-lg {% if session.flash.type == 'success' %}bg-green-50 border border-green-200 text-green-800{% elseif session.flash.type == 'error' %}bg-red-50 border border-red-200 text-red-800{% else %}bg-yellow-50 border border-yellow-200 text-yellow-800{% endif %}">
        {{ session.flash.message }}
    </div>
    {% endif %}

    <div class="flex justify-between items-center mb-8">
        <h1 class="text-2xl font-semibold text-gray-900">{{ trans('admin.cache.title') }}</h1>
        <div class="flex gap-3">
            <form method="post" action="{{ base_path }}/admin/cache/warm" class="inline">
                <input type="hidden" name="csrf" value="{{ csrf }}">
                <button type="submit" class="bg-gray-100 text-gray-700 px-4 py-2 rounded hover:bg-gray-200 transition-colors">
                    <i class="fas fa-fire mr-2"></i>{{ trans('admin.cache.warm_all') }}
                </button>
            </form>
            <form method="post" action="{{ base_path }}/admin/cache/clear" class="inline">
                <input type="hidden" name="csrf" value="{{ csrf }}">
                <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 transition-colors">
                    <i class="fas fa-trash mr-2"></i>{{ trans('admin.cache.clear_all') }}
                </button>
            </form>
        </div>
    </div>

    {# Stats Overview #}
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-white border border-gray-200 rounded-lg p-6">
            <div class="text-3xl font-bold text-gray-900">{{ page_stats.entries }}</div>
            <div class="text-sm text-gray-600">{{ trans('admin.cache.page_entries') }}</div>
        </div>
        <div class="bg-white border border-gray-200 rounded-lg p-6">
            <div class="text-3xl font-bold text-gray-900">{{ (page_stats.total_size / 1024)|round(1) }} KB</div>
            <div class="text-sm text-gray-600">{{ trans('admin.cache.total_size') }}</div>
        </div>
        <div class="bg-white border border-gray-200 rounded-lg p-6">
            <div class="text-3xl font-bold text-gray-900">{{ query_stats.entries }}</div>
            <div class="text-sm text-gray-600">{{ trans('admin.cache.query_entries') }}</div>
        </div>
        <div class="bg-white border border-gray-200 rounded-lg p-6">
            <div class="text-3xl font-bold {% if page_stats.enabled %}text-green-600{% else %}text-red-600{% endif %}">
                {% if page_stats.enabled %}{{ trans('admin.cache.enabled') }}{% else %}{{ trans('admin.cache.disabled') }}{% endif %}
            </div>
            <div class="text-sm text-gray-600">{{ trans('admin.cache.status') }}</div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">

        {# Cache Settings #}
        <div class="bg-white border border-gray-200 rounded-lg p-6">
            <h2 class="text-lg font-medium text-gray-900 mb-4">{{ trans('admin.cache.settings') }}</h2>

            <form method="post" action="{{ base_path }}/admin/cache/settings">
                <input type="hidden" name="csrf" value="{{ csrf }}">

                <div class="space-y-4">
                    <div class="flex items-center">
                        <input type="checkbox" name="cache_enabled" id="cache_enabled" class="h-4 w-4 text-black focus:ring-black border-gray-300 rounded" {% if cache_enabled %}checked{% endif %}>
                        <label for="cache_enabled" class="ml-2 text-sm text-gray-700">{{ trans('admin.cache.enable_page_cache') }}</label>
                    </div>

                    <div>
                        <label for="cache_ttl" class="block text-sm font-medium text-gray-700 mb-1">{{ trans('admin.cache.ttl') }}</label>
                        <select name="cache_ttl" id="cache_ttl" class="w-full border border-gray-300 rounded px-3 py-2">
                            <option value="300" {% if cache_ttl == 300 %}selected{% endif %}>5 {{ trans('admin.cache.minutes') }}</option>
                            <option value="900" {% if cache_ttl == 900 %}selected{% endif %}>15 {{ trans('admin.cache.minutes') }}</option>
                            <option value="1800" {% if cache_ttl == 1800 %}selected{% endif %}>30 {{ trans('admin.cache.minutes') }}</option>
                            <option value="3600" {% if cache_ttl == 3600 %}selected{% endif %}>1 {{ trans('admin.cache.hour') }}</option>
                            <option value="7200" {% if cache_ttl == 7200 %}selected{% endif %}>2 {{ trans('admin.cache.hours') }}</option>
                            <option value="21600" {% if cache_ttl == 21600 %}selected{% endif %}>6 {{ trans('admin.cache.hours') }}</option>
                            <option value="43200" {% if cache_ttl == 43200 %}selected{% endif %}>12 {{ trans('admin.cache.hours') }}</option>
                            <option value="86400" {% if cache_ttl == 86400 %}selected{% endif %}>24 {{ trans('admin.cache.hours') }}</option>
                        </select>
                    </div>

                    <div class="flex items-center">
                        <input type="checkbox" name="auto_warm" id="auto_warm" class="h-4 w-4 text-black focus:ring-black border-gray-300 rounded" {% if auto_warm %}checked{% endif %}>
                        <label for="auto_warm" class="ml-2 text-sm text-gray-700">{{ trans('admin.cache.auto_warm') }}</label>
                    </div>
                </div>

                <div class="mt-6">
                    <button type="submit" class="bg-black text-white px-4 py-2 rounded hover:bg-gray-800 transition-colors">
                        {{ trans('admin.cache.save_settings') }}
                    </button>
                </div>
            </form>
        </div>

        {# Quick Actions #}
        <div class="bg-white border border-gray-200 rounded-lg p-6">
            <h2 class="text-lg font-medium text-gray-900 mb-4">{{ trans('admin.cache.quick_actions') }}</h2>

            <div class="space-y-3">
                <form method="post" action="{{ base_path }}/admin/cache/clear/home" class="flex items-center justify-between p-3 bg-gray-50 rounded">
                    <input type="hidden" name="csrf" value="{{ csrf }}">
                    <div>
                        <div class="font-medium text-gray-900">{{ trans('admin.cache.home_cache') }}</div>
                        <div class="text-sm text-gray-600">{{ trans('admin.cache.home_cache_desc') }}</div>
                    </div>
                    <button type="submit" class="text-red-600 hover:text-red-800 text-sm font-medium">{{ trans('admin.cache.clear') }}</button>
                </form>

                <form method="post" action="{{ base_path }}/admin/cache/clear/galleries" class="flex items-center justify-between p-3 bg-gray-50 rounded">
                    <input type="hidden" name="csrf" value="{{ csrf }}">
                    <div>
                        <div class="font-medium text-gray-900">{{ trans('admin.cache.galleries_cache') }}</div>
                        <div class="text-sm text-gray-600">{{ trans('admin.cache.galleries_cache_desc') }}</div>
                    </div>
                    <button type="submit" class="text-red-600 hover:text-red-800 text-sm font-medium">{{ trans('admin.cache.clear') }}</button>
                </form>

                <form method="post" action="{{ base_path }}/admin/cache/clear/albums" class="flex items-center justify-between p-3 bg-gray-50 rounded">
                    <input type="hidden" name="csrf" value="{{ csrf }}">
                    <div>
                        <div class="font-medium text-gray-900">{{ trans('admin.cache.albums_cache') }}</div>
                        <div class="text-sm text-gray-600">{{ trans('admin.cache.albums_cache_desc') }}</div>
                    </div>
                    <button type="submit" class="text-red-600 hover:text-red-800 text-sm font-medium">{{ trans('admin.cache.clear') }}</button>
                </form>

                <form method="post" action="{{ base_path }}/admin/cache/clear/query" class="flex items-center justify-between p-3 bg-gray-50 rounded">
                    <input type="hidden" name="csrf" value="{{ csrf }}">
                    <div>
                        <div class="font-medium text-gray-900">{{ trans('admin.cache.query_cache') }}</div>
                        <div class="text-sm text-gray-600">{{ trans('admin.cache.query_cache_desc') }}</div>
                    </div>
                    <button type="submit" class="text-red-600 hover:text-red-800 text-sm font-medium">{{ trans('admin.cache.clear') }}</button>
                </form>
            </div>
        </div>
    </div>

    {# Cache Entries List #}
    {% if page_stats.items|length > 0 %}
    <div class="mt-8 bg-white border border-gray-200 rounded-lg overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-medium text-gray-900">{{ trans('admin.cache.cached_pages') }}</h2>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ trans('admin.cache.page') }}</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ trans('admin.cache.size') }}</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ trans('admin.cache.generated') }}</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ trans('admin.cache.expires') }}</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ trans('admin.cache.status') }}</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">{{ trans('admin.cache.actions') }}</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    {% for item in page_stats.items %}
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">{{ item.type }}</div>
                            {% if item.slug is defined %}
                            <div class="text-xs text-gray-500">{{ item.slug }}</div>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {{ (item.size / 1024)|round(1) }} KB
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {{ item.generated_at|date('Y-m-d H:i') }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {{ item.expires_at|date('Y-m-d H:i') }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            {% if item.expired %}
                            <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full bg-red-100 text-red-800">{{ trans('admin.cache.expired') }}</span>
                            {% else %}
                            <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">{{ trans('admin.cache.valid') }}</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right">
                            <form method="post" action="{{ base_path }}/admin/cache/clear/{{ item.type }}" class="inline">
                                <input type="hidden" name="csrf" value="{{ csrf }}">
                                <button type="submit" class="text-red-600 hover:text-red-800 text-sm">{{ trans('admin.cache.clear') }}</button>
                            </form>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {% endif %}

    {# Info Box #}
    <div class="mt-8 bg-gray-50 border border-gray-200 rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-2">{{ trans('admin.cache.how_it_works') }}</h3>
        <p class="text-gray-600 text-sm mb-4">
            {{ trans('admin.cache.how_it_works_desc') }}
        </p>
        <ul class="text-sm text-gray-600 space-y-2">
            <li><i class="fas fa-check text-green-500 mr-2"></i>{{ trans('admin.cache.benefit_1') }}</li>
            <li><i class="fas fa-check text-green-500 mr-2"></i>{{ trans('admin.cache.benefit_2') }}</li>
            <li><i class="fas fa-check text-green-500 mr-2"></i>{{ trans('admin.cache.benefit_3') }}</li>
        </ul>
    </div>

</div>
{% endblock %}
